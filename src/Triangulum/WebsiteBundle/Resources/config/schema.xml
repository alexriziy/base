<?xml version="1.0" encoding="UTF-8"?>
<database name="default" namespace="Triangulum\WebsiteBundle\Model" defaultIdMethod="native">
    <table name="user" phpName="User" idMethod="native">
        <column name="id" phpName="Id" type="INTEGER" primaryKey="true" autoIncrement="true" required="true"/>
        <column name="datetime" phpName="DateTime" type="INTEGER" required="true"/>
        <column name="username" phpName="UserName" type="VARCHAR" size="300" required="true"/>
        <column name="password" phpName="Password" type="VARCHAR" size="300" required="true"/>
        <column name="email" phpName="Email" type="VARCHAR" size="300" required="true"/>
        <column name="phone" phpName="Phone" type="VARCHAR" size="300" required="true"/>
        <column name="groupId" phpName="GroupId" type="INTEGER" />
        <foreign-key foreignTable="group" onDelete="CASCADE">
            <reference local="groupId" foreign="id"/>
        </foreign-key>
    </table>

    <table name="group" phpName="Group" idMethod="native">
        <column name="id" phpName="Id" type="INTEGER" primaryKey="true" autoIncrement="true" required="true"/>
        <column name="parentId" phpName="ParentId" type="INTEGER"/>
        <column name="name" phpName="Name" type="VARCHAR" size="300" required="true"/>
        <column name="role" phpName="Role" type="VARCHAR" size="300" required="true"/>
    </table>
</database>